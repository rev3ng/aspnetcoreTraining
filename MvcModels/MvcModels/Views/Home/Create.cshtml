@model Person
@{
	ViewBag.Title = "Create Person";
	Layout = "_Layout";
}

<form asp-action="DisplaySummary" method="post">
	<div class="form-group">
		<label asp-for="PersonId">ID</label>
		<input asp-for="PersonId" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="FirstName">Name</label>
		<input asp-for="FirstName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="LastName">Surname</label>
		<input asp-for="LastName" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Role">Rola</label>
		<select asp-for="Role" class="form-control"
		        asp-items="@new SelectList(Enum.GetNames(typeof(Role)))"></select>
	</div>
	<div class="form-group">
		<label asp-for="HomeAddress.City">City</label>
		<input asp-for="HomeAddress.City" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="HomeAddress.Country">Country</label>
		<input asp-for="HomeAddress.Country" class="form-control" />
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>